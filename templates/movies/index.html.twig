{% extends 'base.html.twig' %}

{% block title %}
	Movies Page
{% endblock %}

{% block body %}


	<div class="container" style="margin-top: 80px !important">
		<h2 style="text-align: center;">Movies
			({{ movies|length }})</h2>
			<hr>
		<div class="create-button">
			<a href="/movie/create" class="btn btn-primary">
				Add New Movie
			</a>
		</div>
		<hr style="visibility: hidden;">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for movie in movies %}
				<div class="col">
					<div class="card">
						<img src="{{movie.imagePath}}" class="card-img-top" alt="Hollywood Sign on The Hill"/>
						<div class="card-body">
							<h5 class="card-title">{{movie.title}}</h5>
							<h6 class="card-title">{{movie.releaseYear}}</h6>
							<p class="card-text">
								{{movie.description}}
							</p>
						</div>
						<a href="/movie/{{ movie.id }}" class="btn btn-primary">Read More!</a>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>


{% endblock %}

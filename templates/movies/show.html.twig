{% extends 'base.html.twig' %}

{% block title %}
	Movies Page
{% endblock %}

{% block body %}


	<div class="container" style="margin-top: 80px !important">
		<section class="movie-detail-section">
			<div class="container">
				<div class="col-lg-12 col-md-12 col-sm-12 post-title-block">
					<h1 class="text-center">{{ movie.title | title }}</h1>
					<ul class="list-inline text-center">
						<li>Author | Category |
							{{ movie.releaseYear }}</li>
					</ul>
					<img class="movie-detail-image img-fluid" src="{{ movie.imagePath }}" alt="{{ movie.title | title }}">
				</div>
			</div>
			<div class="movie-detail-description">
				{{movie.description}}
			</div>
		</section>
	</div>


{% endblock %}
